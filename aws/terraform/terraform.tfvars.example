# Example Terraform Variables File
# Copy this file to terraform.tfvars and update with your actual values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "stock-prediction"
environment  = "prod"

# Domain Configuration
domain_name = "stockprediction.yourdomain.com"
email       = "your-email@yourdomain.com"

# Infrastructure Configuration
instance_type     = "t3.medium"  # Adjust based on your needs
min_instances     = 1
max_instances     = 3
desired_instances = 2

# Database Configuration
db_instance_class = "db.t3.micro"  # Adjust based on your needs
db_name          = "stockdb"
db_username      = "stockuser"
db_password      = "your-secure-database-password"  # Use a strong password

# SSH Configuration
public_key      = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-public-key-here"
ssh_cidr_block  = "0.0.0.0/0"  # Restrict this to your IP for better security

# API Keys (Keep these secure!)
alpha_vantage_api_key   = "your-alpha-vantage-api-key"
angel_one_api_key      = "your-angel-one-api-key"
angel_one_client_id    = "your-angel-one-client-id"
angel_one_password     = "your-angel-one-password"
angel_one_totp_secret  = "your-angel-one-totp-secret"

# Application Secrets
jwt_secret_key         = "your-jwt-secret-key-here"
grafana_admin_password = "your-grafana-admin-password"

# Notes:
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords for all services
# 3. Consider using AWS Secrets Manager for sensitive values
# 4. Restrict SSH access to your IP address only
# 5. Use appropriate instance sizes based on your expected load